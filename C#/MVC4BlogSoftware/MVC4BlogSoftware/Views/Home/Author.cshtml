@model MVC4BlogSoftware.PagedEntries

<!-- import the included stylesheet for some (very basic) default styling -->
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
@Html.Partial("_ArchivePartial")
@if(Model.Enabled)
{
    if (Model.CurrentPage > 1)
     {
        @Html.ActionLink("<<", "Author", new {name = Model.Author, page = Model.CurrentPage - 1});
     }
    else
    {
        <span>&lt;&lt;</span>
    }
    if (Model.PageOfPosts.Any())
    {
        @Html.ActionLink(">>", "Author", new {name = Model.Author,  page = Model.CurrentPage + 1 });
    }
    else
    {
        <span>&gt;&gt;</span>
    }
    @Html.ActionLink("All one page?", "Author", new {name = Model.Author, page = 0})    
    
}
else
{
    @Html.ActionLink("5 per page?", "Author", new {name = Model.Author, page = 1})       
}