@if(Model.Enabled)
{
@*    @Html.PagedListPager(Model.PagedList,page => Url.Action("Archive", new { page }),PagedListRenderOptions.MinimalWithItemCountText)*@
    if (Model.CurrentPage > 1)
     {
        @Html.ActionLink("<<", "Archive", new {page = Model.CurrentPage - 1});
     }
    if (Model.CurrentPage < Model.TotalPages)
    {
        @Html.ActionLink(">>", "Archive", new { page = Model.CurrentPage + 1 });
    }
    @Html.ActionLink("All one page?", "Archive", new {page = 0})    
    
}
else
{
    @Html.ActionLink("5 per page?", "Archive", new {page = 1})       
}
